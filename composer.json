{
    "name": "fab2s/searchable",
    "description": "Laravel searchable models based on FullText indexes",
    "type": "library",
    "authors": [{
        "name": "Fabrice de Stefanis"
    }],
    "support": {
        "issues": "https://github.com/fab2s/Searchable/issues",
        "source": "https://github.com/fab2s/Searchable"
    },
    "keywords": [
        "Laravel",
        "Searchable",
        "mysql",
        "FullText",
        "model"
    ],
    "license": [
        "MIT"
    ],
    "require": {
        "php": "^8.1",
        "fab2s/strings": "^1.0"
    },
    "require-dev": {
        "ext-pdo": "*",
        "phpunit/phpunit": "10.0|^11.0",
        "orchestra/testbench": "^8.0|^9.0|^10.0",
        "friendsofphp/php-cs-fixer": "^3.0",
        "laravel/pint": "^1.27",
        "phpstan/phpstan": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "fab2s\\Searchable\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "fab2s\\Searchable\\Tests\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "fab2s\\Searchable\\SearchableServiceProvider"
            ]
        }
    },
    "scripts": {
        "post-update-cmd": [
            "rm -f .*.cache"
        ],
        "post-install-cmd": [
            "rm -f .*.cache"
        ],
        "post-autoload-dump": [
            "@php vendor/bin/testbench package:discover --ansi"
        ],
        "fix": [
            "Composer\\Config::disableProcessTimeout",
            "@php vendor/bin/pint --ansi --config pint.json --"
        ],
        "test": [
            "Composer\\Config::disableProcessTimeout",
            "@php vendor/bin/phpunit --colors --"
        ],
        "cov": [
            "Composer\\Config::disableProcessTimeout",
            "@php vendor/bin/phpunit --colors --coverage-html ./cov --"
        ],
        "stan": [
            "Composer\\Config::disableProcessTimeout",
            "@php vendor/bin/phpstan analyse -c ./phpstan.neon --ansi --"
        ],
        "stan-tests": [
            "Composer\\Config::disableProcessTimeout",
            "@php vendor/bin/phpstan analyse -c ./phpstan-tests.neon --ansi --"
        ]
    }
}
